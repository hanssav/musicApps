{{>head}}
{{#if isLogin}}
<div class="container music">
    <div class="row" id="">
        <div class="col-2" id="sidebar-index">
            {{>sidebar}}
        </div>


        {{!-- first row --}}
        <div class="col-10">
            <div class="add-music">
                <h6>Upload Your's Music</h6>
                <h1>Upluad Music</h1>
            </div>


            <div class="row d-flex justify-content-center mt-100">
                <div class="col-md-8">
                    <div class="card">
                        <form class="from form-input gorup-input" action="/addMusic" method="POST"
                            enctype="multipart/form-data">
                            <div class="card-header">
                                <h5>Upload Music</h5>
                            </div>
                            <div class="card-block">
                                <div>
                                    <label for="title"> Title </label>
                                    <input type="text" name="title" class="form-control" placeholder="Title">
                                </div>
                                <div>
                                    <label for="imageCover"> Cover Image </label>
                                    <input type="file" id="fileToUpload" name="image" class="form-control"
                                        placeholder="Upload cover image">
                                </div>

                                <div>
                                    <label for="musicFile"> Music </label>
                                    <input type="text" id="musicFile" name="musicFile" class="form-control"
                                        placeholder="Upload File Music">
                                </div>


                                <div class="text-center m-t-20">
                                    <button class="btn btn-primary">Upload Now</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{>footer}}

{{/if}}